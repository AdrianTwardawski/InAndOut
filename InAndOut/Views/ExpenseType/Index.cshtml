@model IEnumerable<InAndOut.Models.ExpenseType>

<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Expenses Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-controller="ExpenseType" asp-action="Create">Create new Expense Type</a> 
        </div>
    </div>
    
    @if (Model.Count() > 0)
    {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th scope="col" width="75%">Name</th>
                <th scope="col" width="25%">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var expenseType in Model)
        {
            <tr>
                <td width="75%">@expenseType.Name</td>
                <td width="25%">
                    <div class="w-25 btn-group" role="group">
                        <a class="btn btn-info mx-1" asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expenseType.Id">Update</a>
                        <a class="btn btn-danger mx-1" asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expenseType.Id">Delete</a>
                    </div>
                </td>                
            </tr>
        }
        </tbody>      
    </table>
    }
    else
    {
        <p>No Expense Type Content</p>
    }
</div>
